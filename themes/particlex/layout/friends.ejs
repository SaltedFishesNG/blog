<link rel="stylesheet" href="./css/friends.css" type="text/css" media="all">

<div class="article">
    <div>
        <h1><%= page.title %></h1>
    </div>
    <div class="info">
        <span class="date">
            <span class="icon">
                <i class="fa-solid fa-calendar fa-fw"></i>
            </span>
            <%= date(page.date, "YYYY/M/D") %>
        </span>
    </div>

    <div class="content" v-pre>
        <h2 id = "📖 友人帐" ><a href = "#📖 友人帐"class = "headerlink"title = "📖 友人帐" ></a>📖 友人帐</h2 >
        <p>以下排名不分先后。</br>本页友链样式魔改自<a href="https://github.com/MengXin001/icarus-links">icarus-links</a>。</p>

        <div id="content" class="site-content"><article class="post-item post-301 page type-page status-publish has-post-thumbnail hentry">
        <% if (page.links) { %>
            <div class="links">
                <ul class="link-items fontSmooth">
                <% (page.links||[]).forEach(function (item) { %>
                    <li class="link-item">
                    <a class="link-item-inner effect-apollo" href="<%- item.link %>" title="<%- item.desc %>" target="_blank" rel="friend">
                        <img class="lazyload" data-src="<%- item.icon %>" src="<%- item.icon %>">
                        <span class="sitename"><%- item.title %></span>
                        <div class="linkdes"><%- item.desc %></div>
                    </a>
                    </li>
                <% }) %>
                </ul>
            </div>
        <% } %>
        </article></div>

        <%- page.content %>
    </div>

    <% if (page.comments) { %>
    <% if (theme.gitalk.enable) { %>
    <div id="comment"><div id="gitalk-container"></div></div>
    <% } %>
    <% if (theme.giscus.enable) { %>
    <div id="comment"><div id="giscus-container" class="giscus"></div></div>
    <% } %>
    <% if (theme.waline.enable) { %>
    <div id="comment"><div id="waline-container"></div></div>
    <% } %>
    <% if (theme.twikoo.enable) { %>
    <div id="comment"><div id="twikoo-container"></div></div>
    <% } %>
    <% } %>
</div>
